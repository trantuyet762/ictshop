@model IEnumerable<Ictshop.Models.LoaiPhuKien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý loại phụ kiện</h2>

<p>
    @Html.ActionLink("Thêm mới phụ kiện", "Create")
</p>
<table class="table">
    <tr>

        <th>
            Mã phụ kiện
        </th>
        <th>
            Tên phụ kiện
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.maLinhKien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tenLinhKien)
            </td>

            <td>
                <button class="btn btn-success">
                    @Html.ActionLink("Sửa", "Edit", new { id = item.maLinhKien }, new { @style = "color:white;" })
                </button>
                @*<button class="btn btn-primary">
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.maLinhKien }, new { @style = "color:white;" })
                </button>*@
                <button class="btn btn-danger">
                    @Html.ActionLink("Xóa", "Delete", new { id = item.maLinhKien }, new { @style = "color:white;" })
                </button>
            </td>
        </tr>
    }

</table>


